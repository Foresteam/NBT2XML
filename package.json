{
	"name": "xnbtedit",
	"version": "0.10.0",
	"description": "Named Binary Tag XML editor/converter",
	"main": "dist/index.js",
	"type": "module",
	"scripts": {
		"test": "ts-node src/tests.ts",
		"prepare": "tsc",
		"build": "tsc && rm -r dist && tsc && mkdir dist/bin && caxa -i . '{{caxa}}/node_modules/.bin/node' '{{caxa}}/dist' -o dist/bin/xnbtedit",
		"pack-lin": "tar -caf XNBTEdit-0.9.12-Lin.tar.gz dist/bin/xnbtedit LICENSE",
		"pack-win": "tar -caf XNBTEdit-0.9.12-Win.zip dist/bin/xnbtedit.exe LICENSE",
		"build-win": "tsc && rm -R dist && tsc && mkdir dist/bin && caxa -i . '{{caxa}}/node_modules/.bin/node' '{{caxa}}/dist' -o dist/bin/xnbtedit.exe"
	},
	"pkg": {
		"targets": [
			"node17-linux"
		],
		"assets": "LICENSE"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Foresteam/XNBTEdit.git"
	},
	"keywords": [
		"nbt",
		"minecraft",
		"xml",
		"edit"
	],
	"author": "Foresteam",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Foresteam/XNBTEdit/issues"
	},
	"homepage": "https://github.com/Foresteam/XNBTEdit#readme",
	"dependencies": {
		"@foresteam/mojangson": "^2.0.4",
		"@types/glob": "^7.2.0",
		"chokidar": "^3.5.3",
		"colors": "^1.4.0",
		"command-line-args": "^5.2.1",
		"command-line-usage": "^6.1.3",
		"fast-xml-parser": "^4.0.7",
		"glob": "^8.0.3",
		"tempy": "^2.0.0",
		"xml2js": "^0.4.23",
		"xmlbuilder": "^15.1.1",
		"xmlbuilder2": "^3.0.2"
	},
	"devDependencies": {
		"@types/command-line-args": "^5.2.0",
		"@types/command-line-usage": "^5.0.2",
		"@types/node": "^17.0.35",
		"@types/xml2js": "^0.4.11",
		"caxa": "^2.1.0",
		"ts-node": "^10.8.0",
		"typescript": "^4.7.2"
	}
}
